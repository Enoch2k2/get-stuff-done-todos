<!DOCTYPE html>
<html>
  <head>
    <title>Todo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= 'home_background' unless user_signed_in? %>">
    <%= render 'layouts/nav' %>
    <div class="container-fluid">
      <div class="row">
      <% if user_signed_in? %>
        <div class="col-md-2">
          <%= render 'layouts/sidebar' %>
        </div> <!-- end col-md-2 -->
      <% end %>
        <div class="<%= user_signed_in? ? 'col-md-10' : 'col-md-12' %>">
          <%= yield %>
        </div>
      </div> <!-- end row -->
    </div> <!-- end container fluid -->
  </body>
</html>
